{
  "manifest_version": 3,
  "name": "DiscordTracker",
  "version": "1.1",
  "description": "Discord ボイスチャンネルの入室ログを表示します",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://discord.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"]
    }
  ]
}
